<%- include('header') %> 
    <%- include('nav') %>
	<!-- 内容部分 -->
	<!-- 主宽度 -->
	<div class="container body-content">
		<!-- 栅格系统 -->
		<div class="row">
			<!-- 左边 -->
			<div class="col-md-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">玄幻小说热门推荐</h3>
					</div>
					<ul class="list-group">
                        <% hot.forEach(function(item,index){ %>
                            <li class="list-group-item">
                                <span class="nums nums-c<%= index < 3 ? 1 : '' %>"><%= index + 1 %></span><a href="/book/<%= item.bookId %>"><%= item.name %></a><span class="txt-author">/<%= item.author %></span><span class="pull-right"><%= item.watch %></span>
                            </li>
                        <% }) %>
					</ul>
				</div>
			</div>
			<!-- 左边 -->
			<div class="col-md-8">
				<div class="panel panel-default">
				  	<div class="panel-heading">
				  		<h3 class="panel-title">玄幻小说最新更新</h3>
				 	</div>
			    	<table class="table list-table">
			    		<thead>
			    			<tr>
			    				<th>书名</th>
			    				<th class="hidden-xs">最新章节</th>
			    				<th>作者</th>
			    				<th class="hidden-xs">更新时间</th>
			    			</tr>
			    		</thead>
			    		<tbody>
                        <% last.forEach(function(item){ %>
                           <tr>
			    				<td><a href="/chapter/<%= item.bookId %>"><%= item.name %></a></td>
			    				<td class="hidden-xs"><a href="#" class="text-muted"><%= item.chapterName %></a></td>
			    				<td><span href="#" class="text-muted"><%= item.author %></span></td>
			    				<td class="hidden-xs"><span class="text-muted"><%= item.time %></span></td>
			    			</tr>
                        <% }) %>
			    		</tbody>
			    	</table>
			    	<!-- 分页 -->
				</div>
		    	<nav aria-label="Page navigation">
				  	<ul class="pagination mt0 mb0">
					    <li>
					      	<a href="#" aria-label="Previous">
					        	<span aria-hidden="true">&laquo;</span>
					      	</a>
					    </li>
					    <li><a href="#">1</a></li>
					    <li><a href="#">2</a></li>
					    <li><a href="#">3</a></li>
					    <li><a href="#">4</a></li>
					    <li><a href="#">5</a></li>
					    <li>
					      	<a href="#" aria-label="Next">
					        	<span aria-hidden="true">&raquo;</span>
					      	</a>
					    </li>
				  	</ul>
				</nav>
			</div>
		</div>
		<%- include('footer') %>
	</div>
 <%- include('footerHtml') %>